<style>
  .canvas-wrapper {
    background-color: #f0f0f0;
    padding: 10px;
    border-radius: 5px;
    display: inline-block;
  }

  .form-group {
    margin-bottom: 10px;
  }

  .compact-label {
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 2px;
  }

  input[type="number"] {
    font-size: 0.85rem;
    padding: 4px 6px;
    height: 32px;
  }

  .card-header {
    font-size: 0.95rem;
    padding: 6px 10px;
  }

  .card-body {
    padding: 10px;
  }

  .btn {
    font-size: 0.85rem;
    padding: 6px 10px;
  }

  h3 {
    font-size: 1.4rem;
  }

  p.text-muted {
    font-size: 0.9rem;
  }

  canvas {
    max-width: 100%;
    height: auto;
  }
</style>

<div class="container mt-3">
  <div class="text-center mb-3">
    <h3>üìê C√°lculo Referencial de Pliegos</h3>
    <p class="text-muted">Herramienta auxiliar para estimar uso de papel en impresi√≥n.</p>
    <hr>
  </div>

  <div class="row">
    <!-- Formulario -->
    <div class="col-md-4 mb-3">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">üìù Datos de Entrada</div>
        <div class="card-body">

          <div class="form-row">
            <div class="col">
              <label class="compact-label">Pliego Ancho</label>
              <input type="number" class="form-control" id="input1">
            </div>
            <div class="col">
              <label class="compact-label">Pliego Alto</label>
              <input type="number" class="form-control" id="input2">
            </div>
          </div>

          <div class="form-row">
            <div class="col">
              <label class="compact-label">Corte Ancho</label>
              <input type="number" class="form-control" id="input3">
            </div>
            <div class="col">
              <label class="compact-label">Corte Alto</label>
              <input type="number" class="form-control" id="input4">
            </div>
          </div>

          <div class="form-group mt-2">
            <label class="compact-label">Cantidad de Unidades</label>
            <input type="number" class="form-control" id="input5">
          </div>

          <hr class="my-2">

          <div class="form-row">
            <div class="col">
              <label class="compact-label">Margen Izquierdo</label>
              <input type="number" class="form-control" id="margenIzquierdo" value="0.5">
            </div>
            <div class="col">
              <label class="compact-label">Margen Derecho</label>
              <input type="number" class="form-control" id="margenDerecho" value="0.5">
            </div>
          </div>

          <div class="form-row">
            <div class="col">
              <label class="compact-label">Margen Superior</label>
              <input type="number" class="form-control" id="margenSuperior" value="1">
            </div>
            <div class="col">
              <label class="compact-label">Margen Inferior</label>
              <input type="number" class="form-control" id="margenInferior" value="1.2">
            </div>
          </div>

          <div class="d-flex justify-content-between mt-3">
            <button class="btn btn-outline-primary w-50 mr-1" id="calculate-btn1">‚ÜîÔ∏è Horizontal</button>
            <button class="btn btn-outline-secondary w-50 ml-1" id="calculate-btn2">‚ÜïÔ∏è Vertical</button>
          </div>

        </div>
      </div>
    </div>

    <!-- Resultados y Canvas -->
    <div class="col-md-8 mb-3">
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">üìä Visualizaci√≥n</div>
        <div class="card-body text-center">
          <div class="canvas-wrapper mb-2">
            <canvas id="myCanvas" width="500" height="500" class="border border-secondary rounded"></canvas>
          </div>

          <div class="form-row">
            <div class="col-6">
              <label class="compact-label">Unidades por pliego</label>
              <input type="number" class="form-control text-center" id="resultC" readonly>
            </div>
            <div class="col-6">
              <label class="compact-label">Pliegos necesarios</label>
              <input type="number" class="form-control text-center" id="result" readonly>
            </div>
          </div>

          <div class="form-row mt-2">
            <div class="col-6">
              <label class="compact-label">Porcentaje Ocupado</label>
              <input type="number" class="form-control text-center" id="porO" readonly>
            </div>
            <div class="col-6">
              <label class="compact-label">Porcentaje Libre</label>
              <input type="number" class="form-control text-center" id="porL" readonly>
            </div>
          </div>

          <hr class="my-2">

          <h6 class="text-muted mt-2">Unidades que ingresan por pliego</h6>
          <div class="form-row justify-content-center">
            <div class="col-md-4">
              <input type="number" class="form-control text-center" id="width" placeholder="Ancho" readonly>
            </div>
            <div class="col-md-4">
              <input type="number" class="form-control text-center" id="height" placeholder="Alto" readonly>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>Resumen de Cálculo de Costos</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
            .info-box {
                border: 1px solid #ddd;
                padding: 10px;
                font-size: 12px;
                background-color: #f9f9f9;
                border-radius: 5px;
            }
            .info-title {
                font-weight: bold;
                background-color: #007bff;
                color: white;
                padding: 5px;
                font-size: 14px;
                border-radius: 3px;
            }
            .scrollable-table {
                max-height: 300px;
                overflow-y: auto;
                border: 1px solid #ddd;
            }
            .table thead th {
                background-color: #007bff;
                color: white;
                font-weight: bold;
                text-align: center;
            }
            th, td {
                border: 1px solid #ddd;
                padding: 5px;
                text-align: center;
            }
            .no-print {
                margin-top: 20px;
            }
            @media print {
                .no-print {
                    display: none;
                }
            }
        </style>
    </head>
    <body>
        <div class="container mt-3">

            <h3 class="text-center mt-3 mb-4">Resumen del Cálculo de Costos</h3>

            <!-- CABECERA -->
            <div class="row">
                <div class="col-md-6">
                    <div class="info-box">
                        <div class="info-title">Cabecera</div>
                        <p><strong>Fecha:</strong> {{quotation.fecha}}</p>
                        <p><strong>Fecha Vence:</strong> {{quotation.fechaVence}}</p>
                        <p><strong>Descripción:</strong> {{quotation.descripcionCorta}}</p>
                    </div>
                </div>

                <!-- DETALLE -->
                <div class="col-md-6">
                    <div class="info-box">
                        <div class="info-title">Detalle</div>
                        <p><strong>Línea:</strong> {{detalle.lineaQuo}} | <strong>Tipo:</strong> {{detalle.tipoQuo}} | <strong>Cantidad:</strong> {{detalle.cantidadQuo}}</p>
                        <p><strong>Descripción:</strong></p>
                        <textarea class="detalle-largo" readonly style="width: 100%; min-height: 4em; border: 1px solid #ccc; padding: 5px;">{{detalle.descripcionQuo}}</textarea>
                    </div>
                </div>
            </div>
            <!-- MOSTRAR TODAS LAS VERSIONES DE CÁLCULOS -->
            {{#each calculos}}
                <div class="mt-5">
                    <div class="info-box">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="info-title m-0 p-2 w-100">
                                Versión: {{this.titulo}} | Usuario: {{this.usuario}} | Fecha: {{this.fecha}}
                                <!--<a href="#" class="btn btn-sm btn-outline-danger">Exportar a PDF</a>-->
                                <a href="/pdf/ver-hoja/{{../detalle._id}}/{{@index}}" class="btn btn-sm btn-outline-success">Ver Hoja / Exportar</a>
                            </div>
                        </div>

                        <div class="scrollable-table mb-2">
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tipo Material</th>
                                        <th>No. Artículo</th>
                                        <th>Detalle</th>
                                        <th>Cantidad</th>
                                        <th>Precio</th>
                                        <th>Monto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.lineas}}
                                        <tr>
                                            <td>{{lineaQuo}}</td>
                                            <td>{{tipoMaterial}}</td>
                                            <td>{{noArticulo}}</td>
                                            <td>{{detalle}}</td>
                                            <td>{{cantidad}}</td>
                                            <td>{{precio}}</td>
                                            <td>{{monto}}</td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="6" class="text-right"><strong>Total</strong></td>
                                        <td><strong>{{sum this.lineas "monto"}}</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </body>
</html>

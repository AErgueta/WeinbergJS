{{#if customer}}
    {{#each errors}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{text}}
            <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {{/each}}
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Editar Cliente</h3>
            </div>
            <div class="card-body">
                <form action="/customers/edit/{{customer._id}}?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" name="aliasCus" class="form-control" placeholder="Alias" autofocus value="{{customer.aliasCus}}">
                    </div>
                    <div class="form-group">
                        <input type="text" name="nombreCus" class="form-control" placeholder="Nombre del Cliente" value="{{customer.nombreCus}}">
                    </div>
                    <div class="form-group">
                        <input type="text" name="contactoCus" class="form-control" placeholder="Nombre del Contacto" value="{{customer.contactoCus}}">
                    </div>
                    <div class="form-group">
                        <input type="email" name="eMailCus" class="form-control" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Please enter a valid email address" required value="{{customer.eMailCus}}">
                    </div>
                    <div class="form-group">
                        <input type="tel" name="telefonoCus" class="form-control" placeholder="Teléfono" value="{{customer.telefonoCus}}">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <p>No se encontró el cliente.</p>
{{/if}}

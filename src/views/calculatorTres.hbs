<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculador de Precio</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .info-box {
            border: 1px solid #ddd;
            padding: 10px;
            font-size: 12px;
            background-color: #f9f9f9;
            border-radius: 5px;
        }
        .info-title {
            font-weight: bold;
            background-color: #007bff;
            color: white;
            padding: 5px;
            font-size: 14px;
            text-align: center;
            border-radius: 3px;
        }
        .detalle-largo {
            width: 100%;
            min-height: 4em; /* 4 l칤neas de altura */
            resize: vertical; /* Permite agrandar con el mouse */
            border: 1px solid #ccc;
            padding: 5px;
        }
        .scrollable-table {
            max-height: 300px; /* Ajustable seg칰n necesidad */
            overflow-y: auto;
            border: 1px solid #ddd;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 5px;
            text-align: center;
        }
        th {
            background-color: #007bff;
            color: white;
        }
        select, input {
            width: 100%;
            padding: 5px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="container mt-3">
        <h2 class="text-center">Calculador de Precio</h2>
        
        <!-- Contenedor de Cabecera y Detalle -->
        <div class="row">
            <!-- Cabecera -->
            <div class="col-md-6">
                <div class="info-box">
                    <div class="info-title">Cabecera</div>
                    <p><strong>Fecha:</strong> {{quotation.fecha}}</p>
                    <p><strong>Fecha Vence:</strong> {{quotation.fechaVence}}</p>
                    <p><strong>Descripci칩n:</strong> {{quotation.descripcionCorta}}</p>
                </div>
            </div>

            <!-- Detalle -->
            <div class="col-md-6">
                <div class="info-box">
                    <div class="info-title">Detalle</div>
                    <p><strong>L칤nea:</strong> {{detalle.lineaQuo}} | <strong>Tipo:</strong> {{detalle.tipoQuo}} | <strong>Cantidad:</strong> {{detalle.cantidadQuo}}</p>
                    <p><strong>Descripci칩n:</strong></p>
                    <textarea class="detalle-largo" readonly>{{detalle.descripcionQuo}}</textarea>
                </div>
            </div>
        </div>

        <!-- GRID DE 10 L칈NEAS -->
        <div class="mt-4">
            <div class="info-title">Detalles del C치lculo</div>
            <div class="scrollable-table">
                <table>
                    <thead>
                        <tr>
                            <th>Tipo Material</th>
                            <th>No. Art칤culo</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Detalle</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#range 1 10}}
                        <tr>
                            <td>
                                <select name="tipoMaterial" class="tipo-material">
                                    <option value="" selected>Seleccione</option>
                                    <option value="P">P - Papel</option>
                                    <option value="T">T - Tinta</option>
                                    <option value="L">L - Plancha</option>
                                    <option value="C">C - Pel칤cula</option>
                                    <option value="A">A - Acabado</option>
                                    <option value="R">R - Preprensa</option>
                                    <option value="M">M - Mano de Obra</option>
                                    <option value="I">I - Costos Indirectos</option>
                                    <option value="O">O - Gastos Operativos</option>
                                    <option value="S">S - Plastificado</option>
                                    <option value="U">U - Utilidad</option>
                                </select>
                            </td>
                            <td>
                                <select name="noArticulo" class="no_articulo">
                                    <option value="">Seleccione</option>
                                    <!-- Aqu칤 se cargar치n din치micamente las opciones -->
                                </select>
                            </td>

                            <td><input type="number" name="cantidad" min="0" step="0.01"></td>
                            <td><input type="number" name="precio" min="0" step="0.01"></td>
                            <td><input type="text" name="detalle"></td>
                            <td><input type="number" name="monto" min="0" step="0.01" readonly></td>
                            
                            <!-- Inputs ocultos -->
                            <input type="hidden" name="factor" value="1">
                            <input type="hidden" name="cantidadM" value="0">
                        </tr>
                        {{/range}}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <!-- L칩gica del formulario -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Delegaci칩n de eventos para "tipoMaterial"
            document.addEventListener("change", async function(event) {
                if (event.target.classList.contains("tipo-material")) {
                    let row = event.target.closest("tr"); 
                    let noArticuloSelect = row.querySelector("select[name='noArticulo']");

                    // Limpiar opciones previas
                    noArticuloSelect.innerHTML = '<option value="">Seleccione</option>';

                    if (event.target.value === "P") { // Si elige Papel
                        try {
                            let response = await fetch('/api/articulos/papel'); 
                            let articulos = await response.json();

                            // Llenamos el combo con los datos obtenidos
                            articulos.forEach(articulo => {
                                let option = document.createElement("option");
                                option.value = articulo.codigoCT;
                                option.textContent = `${articulo.codigoCT} - ${articulo.descCT}`;
                                noArticuloSelect.appendChild(option);
                            });
                        } catch (error) {
                            console.error("Error al cargar art칤culos de Papel:", error);
                        }
                    }
                }
            });

            // Delegaci칩n de eventos para "noArticulo"
            document.addEventListener("change", async function(event) {
                if (event.target.classList.contains("no_articulo")) {
                    let row = event.target.closest("tr"); 
                    let codigoCT = event.target.value; // C칩digo del art칤culo seleccionado
                    if (!codigoCT) return; // Si no hay c칩digo, no hacemos nada

                    try {
                        let response = await fetch(`/api/articulo/${codigoCT}`);
                        let data = await response.json();

                        if (data) {
                            row.querySelector("input[name='precio']").value = data.montoCT || 0;
                            row.querySelector("input[name='detalle']").value = data.descCT || "";
                            row.querySelector("input[name='factor']").value = data.factorCT || 1;

                            console.log("DEtalle cargado:", data.descCT); // 游녣 Muestra el descripci칩n en la consola
                            console.log("Precio cargado:", data.montoCT); // 游녣 Muestra el precio en la consola
                            console.log("Factor cargado:", data.factorCT); // 游녣 Muestra el factor en la consola
                        }
                    } catch (error) {
                        console.error("Error al obtener detalles del art칤culo:", error);
                    }
                }
            });
            // Evento para calcular "monto" y "cantidadM" solo si tipoMaterial es "P - Papel"
            document.addEventListener("input", function(event) {
                if (event.target.name === "cantidad") {
                    let row = event.target.closest("tr");

                    // Verificar si el tipo de material es "P"
                    let tipoMaterial = row.querySelector("select[name='tipoMaterial']").value;
                    if (tipoMaterial !== "P") return;

                    let cantidad = parseFloat(event.target.value) || 0;
                    let precio = parseFloat(row.querySelector("input[name='precio']").value) || 0;
                    let factor = parseFloat(row.querySelector("input[name='factor']").value) || 1;

                    // C치lculo de valores
                    let monto = cantidad * precio;
                    let cantidadM = (factor * cantidad) / 1000;

                    // Asignar valores a los inputs correspondientes
                    row.querySelector("input[name='monto']").value = monto.toFixed(2);
                    row.querySelector("input[name='cantidadM']").value = cantidadM.toFixed(3);

                    console.log(`Cantidad: ${cantidad}, Precio: ${precio}, Factor: ${factor}`);
                    console.log(`Monto: ${monto.toFixed(2)}, CantidadM: ${cantidadM.toFixed(3)}`);
                }
            });
        });
    </script>

</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Orden de Trabajo</title>
  <style>
    body {
      margin: 0;
      background-color: #fff;
      color: #000;
      font-family: 'Arial', sans-serif;
      font-size: 13px;
    }

    .print-button {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: #28a745;
      color: white;
      font-size: 14px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    @media print {
      .print-button {
        display: none;
      }

      .page {
        box-shadow: none;
      }

      body {
        margin: 0;
      }
    }

    .page {
      width: 21cm;
      height: 29.7cm;
      margin: auto;
      background: white;
      padding: 2cm;
      box-sizing: border-box;
      position: relative;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 25px;
    }

    .logo {
      width: 120px;
      height: auto;
    }

    .info-cliente {
      text-align: right;
      font-size: 13px;
      line-height: 1.5;
    }

    .bold {
      font-weight: bold;
    }

    .box {
      border: 1px solid #000;
      padding: 12px;
      margin-top: 10px;
    }

    .box .bold {
      font-size: 15px;
      margin-bottom: 5px;
    }

    .section-title {
      font-weight: bold;
      font-size: 14px;
      margin-top: 25px;
      margin-bottom: 6px;
      padding-bottom: 3px;
      border-bottom: 1px solid #999;
    }

    table {
      width: 100%;
      margin-top: 8px;
      border-collapse: collapse;
      font-size: 13px;
    }

    th {
      background-color: #f2f2f2;
      text-align: left;
      padding: 6px;
      border: 1px solid #ccc;
    }

    td {
      padding: 6px;
      border: 1px solid #ddd;
      vertical-align: top;
    }

    .footer {
      position: absolute;
      bottom: 2cm;
      left: 2cm;
      right: 2cm;
      font-size: 11px;
      display: flex;
      justify-content: space-between;
    }
  </style>
</head>
<body>

<!-- Bot√≥n de impresi√≥n -->
<button class="print-button" onclick="window.print()">üñ®Ô∏è Imprimir PDF</button>

<div class="page">

  <!-- Encabezado -->
  <div class="header">
    <img src="{{logoDataUrl}}" class="logo" alt="Logo" />
    <div class="info-cliente">
      <div>La Paz, {{formatDateLong version.fecha}}</div>
      <div style="text-align:center; margin-bottom:10px;">
        <h6>Cotizaci√≥n: {{codigoCotizacion}}</h4>
      </div>
      <div><span class="bold">C√≥d:</span> {{customer.alias}}</div>
      <div><span class="bold">Cliente:</span> {{customer.nombreCus}}</div>
      <div><span class="bold">Tel√©fono:</span> {{customer.telefonoCus}}</div>
    </div>
  </div>

  <!-- Producto principal -->
  <div class="box">
    <div class="bold">Orden de Trabajo</div>
    <table>
      <thead>
        <tr>
          <th>Cantidad</th>
          <th>Producto</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{detalle.cantidadQuo}}</td>
          <td>{{detalle.descripcionQuo}}</td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Papeles -->
  {{#with (groupByTipo version.lineas "P") as |papeles|}}
    {{#if papeles.length}}
      <div class="section-title">üßª Papeles</div>
      <table>
        <thead>
          <tr>
            <th>C√≥digo</th>
            <th>Descripci√≥n</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          {{#each papeles}}
            <tr>
              <td>{{noArticulo}}</td>
              <td>{{detalle}}</td>
              <td>{{cantidad}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  {{/with}}

  <!-- Tintas -->
  {{#with (groupByTipo version.lineas "T") as |tintas|}}
    {{#if tintas.length}}
      <div class="section-title">üñåÔ∏è Tintas</div>
      <table>
        <thead>
          <tr>
            <th>C√≥digo</th>
            <th>Descripci√≥n</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          {{#each tintas}}
            <tr>
              <td>{{noArticulo}}</td>
              <td>{{detalle}}</td>
              <td>{{cantidad}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  {{/with}}

  <!-- Planchas -->
  {{#with (groupByTipo version.lineas "L") as |planchas|}}
    {{#if planchas.length}}
      <div class="section-title">üß∑ Planchas</div>
      <table>
        <thead>
          <tr>
            <th>C√≥digo</th>
            <th>Descripci√≥n</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          {{#each planchas}}
            <tr>
              <td>{{noArticulo}}</td>
              <td>{{detalle}}</td>
              <td>{{cantidad}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  {{/with}}

  <!-- Pie -->
  <div class="footer">
    <div>
      <div><strong>Fecha de Aceptaci√≥n:</strong> {{fechaAceptacion}}</div>
      <div><strong>Fecha Prevista de Entrega:</strong> {{fechaPrevistaEntrega}}</div>
      <div style="margin-top: 5px;">
        Orden generada autom√°ticamente desde sistema NUMB.
      </div>
    </div>
    <div style="text-align: right;">
      {{version.usuario}}
    </div>
  </div>

</div>
</body>
</html>
